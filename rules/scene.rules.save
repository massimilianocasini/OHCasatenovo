rule "Scene"
    when 
        Item Scena changed
    then
    if (Scena.state==0) {
    logInfo("scena-0", "Notte, cond acceso settato a 28")
    DaikinACUnit_SetPoint_All.postUpdate(28)
    }

    else if (Scena.state==1 ) {
    logInfo("scena-1", "presenza, cond acceso settato a 27,5")
    
    DaikinACUnit_SetPoint_All.postUpdate(27.5)
    }

    else if (Scena.state==2) {
    logInfo("scena-1", "uscita, cond spento")
    DaikinACUnit_SetPoint_All.postUpdate(27.5)
    }
end